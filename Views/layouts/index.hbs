<!DOCTYPE html>
<html lang="en">
<head>
    {{!-- Meta --}}
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {{!-- Styles --}}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link href="/css/style.css" rel="stylesheet">
    {{!-- Scripts --}}
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/index.js"></script>
    <title>Productos</title>
</head>

<body>
  <main class="container-fluid">
  <section class="container">

{{!-- FORM --}}
<form method="post" action="/api/productos/guardar" class="container formulario" onsubmit="return toSubmit();" target="hiddenFrame">
    <h1>Nuevo Productos</h1>
        <div class="formGroup">
            <label for="titleGuardar">Nombre</label>
            <input type="text" id="titleGuardar" name="title" required>
        </div>
        <div class="formGroup">
            <label for="price">Precio</label>
            <input type="number" id="price" name="price" min="0" required>
        </div>
        <div class="formGroup">
            <label for="thumbnail">Imagen URL</label>
            <input type="url" id="thumbnail" name="thumbnail">
        </div>
        <input type="submit" value="CREAR" id="enviar">
</form>

{{!-- PRODUCTS LIST --}}

<hr>

<div class="container title"><h2>Productos disponibles</h2></div>
    <table class="table container" id="myTable">
        <tr class="table-titles container">
            <th>Nombre</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
{{#if listExist}}
    {{#each Productos}}
        <tr class="products-titles">
            <td>{{this.title}}</td>
            <td>${{this.price}}</td>
            <td><img src="{{this.thumbnail}}" class="product_image"></td>
        </tr>
    {{/each}}
    <table>
{{/if}}
<ul class="thisUL"></ul>
<iframe name="hiddenFrame" width="0" height="0" border="0" style="display: none;"></iframe>



  </section>
  </main>




















<script type="text/javascript">const mytable = '<table><tr><th>Nombre</th><th>Precio</th><th>Imagen</th></tr><br><tr> <td> <ul style="color: #fff"></ul></td></tr></table>'</script>  
</body>
</html>